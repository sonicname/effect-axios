{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2020", "dom"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.*"],
	"exclude": ["**/*.test.ts"]
}
